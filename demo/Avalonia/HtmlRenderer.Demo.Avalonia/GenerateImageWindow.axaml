<Window
    x:Class="TheArtOfDev.HtmlRenderer.Demo.Avalonia.GenerateImageWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="GenerateImageWindow"
    Width="500"
    Height="300"
    WindowStartupLocation="CenterOwner">
    <DockPanel Background="#BFDBFF">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Button
                Click="OnGenerateImage_Click"
                Content="Re-Generate"
                Focusable="False" />
            <Button Click="OnSaveToFile_click" Content="Save to File" />
        </StackPanel>
        <DockPanel x:Name="_imageBoxBorder">
            <Image x:Name="_imageBox" Stretch="None" />
        </DockPanel>
    </DockPanel>
</Window>
